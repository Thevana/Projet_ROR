<h1>Listing films</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Durée</th>
      <th>Réalisateur</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= image_tag film.image.url(:medium) %></td>
	<td><%= film.titre %></td>
        <td><%= film.description %></td>
        <td><%= film.durée %></td>
        <td><%= film.réalisateur %></td>
        <td><%= film.note %></td>
        <td><%= link_to 'Show', film %></td>
        <td><%= link_to 'Edit', edit_film_path(film) %></td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

